<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PersonalFinanceClient.Views.AccountsPage"
             Title="Счета">

    <RefreshView IsRefreshing="{Binding IsLoading}" 
                 Command="{Binding LoadAccountsCommand}">

        <ScrollView>
            <VerticalStackLayout Spacing="15" Padding="20">

                <Button Text="➕ Добавить счет" 
                        Command="{Binding AddAccountCommand}"
                        BackgroundColor="#2196F3"
                        TextColor="White"
                        CornerRadius="10"/>

                <CollectionView ItemsSource="{Binding Accounts}">
                    <CollectionView.EmptyView>
                        <Label Text="Нет счетов" 
                               HorizontalOptions="Center" 
                               VerticalOptions="Center"
                               Margin="20"/>
                    </CollectionView.EmptyView>

                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame Padding="15" 
                                   CornerRadius="10" 
                                   BackgroundColor="#F5F5F5"
                                   Margin="0,0,0,10">
                                <VerticalStackLayout>
                                    <HorizontalStackLayout>
                                        <VerticalStackLayout>
                                            <Label Text="{Binding Name}" 
                                                   FontSize="18" 
                                                   FontAttributes="Bold"/>
                                            <Label Text="{Binding Type}" 
                                                   FontSize="12" 
                                                   TextColor="Gray"/>
                                        </VerticalStackLayout>
                                        <Label Text="{Binding Balance, StringFormat='{0:C}'}" 
                                               FontSize="18" 
                                               FontAttributes="Bold"
                                               HorizontalOptions="EndAndExpand"/>
                                    </HorizontalStackLayout>
                                </VerticalStackLayout>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

            </VerticalStackLayout>
        </ScrollView>

    </RefreshView>
</ContentPage>